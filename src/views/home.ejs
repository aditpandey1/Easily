  <style>
    
    h1, h2 {
        color: #8a2be2;
        margin-top: 20px;
    }

    a button, .btn-secondary, .btn-primary , #rec {
        background-color: #8a2be2;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        text-decoration: none;
        cursor: pointer;
        margin: 20px;
        display: inline-block;
        transition: background-color 0.3s;
    }

    a button:hover, .btn-secondary:hover, .btn-primary:hover ,#rec:hover {
        background-color: #6a1a9e;
    }

    /* Modal Styles */
    .modal-content {
        background-color: #fff;
    }

    .modal-header {
        background-color: #8a2be2;
        color: #fff;
        padding: 15px;
    }

    .modal-footer {
        background-color: #f5f5f5;
        padding: 10px;
    }
    #exampleModalLabel{
      color: black;
      text-align: center;
    }
